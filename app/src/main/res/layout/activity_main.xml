<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <!-- Toggle button for connection section -->
    <Button
        android:id="@+id/toggle_connection_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:text="â–¼"
        android:textSize="16sp"
        android:padding="0dp"
        android:background="@android:color/transparent"
        android:textColor="#757575" />

    <TextView
        android:id="@+id/connection_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/toggle_connection_button"
        android:layout_alignParentStart="true"
        android:text="Not Connected"
        android:textSize="16sp"
        android:layout_marginEnd="8dp" />

    <!-- Collapsible connection section -->
    <LinearLayout
        android:id="@+id/connection_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggle_connection_button"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:id="@+id/ip_address_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Server IP Address"
            android:inputType="phone" />

        <Button
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Connect" />

    </LinearLayout>

    <!-- Hidden text input for keyboard typing -->
    <EditText
        android:id="@+id/keyboard_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint=""
        android:inputType="text"
        android:visibility="gone"
        android:alpha="0" />

    <LinearLayout
        android:id="@+id/touchpad_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/connection_section"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/touchpad_border"
        android:elevation="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/left_click_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:layout_marginEnd="4dp"
                android:background="@drawable/mouse_button"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

            <View
                android:id="@+id/scroll_wheel_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/scroll_wheel_simple"
                android:elevation="3dp" />

            <Button
                android:id="@+id/right_click_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:layout_marginStart="4dp"
                android:background="@drawable/mouse_button"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <View
                android:id="@+id/touchpad_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="#E8E8E8" />

            <!-- Cursor magnifying glass overlay - spans entire touchpad -->
            <ImageView
                android:id="@+id/cursor_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:elevation="4dp"
                android:alpha="0.9" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
